function editPatient(identifier) {
      const appendix = $(identifier).data('mail');
      

      const base_url = window.location.origin;
    var tr = document.getElementsByTagName("tr")[1];

     var fname = tr.getElementsByTagName("td")[0];
     var MName = tr.getElementsByTagName("td")[1];
     var LName = tr.getElementsByTagName("td")[2];
     var MobileNumber = tr.getElementsByTagName("td")[3];
     var Age = tr.getElementsByTagName("td")[4];
     var BloodGroup = tr.getElementsByTagName("td")[5];
     var Location = tr.getElementsByTagName("td")[6];
     var Height = tr.getElementsByTagName("td")[7];
     var Weight = tr.getElementsByTagName("td")[8];
    fname = fname.innerHTML;
    MName = MName.innerHTML;
    LName = LName.innerHTML;
    MobileNumber = MobileNumber.innerHTML;
    Age = Age.innerHTML;
    BloodGroup = BloodGroup.innerHTML;
    Location = Location.innerHTML;
    weight =Weight.innerHTML;
    height = Height.innerHTML;


    var exT1 = "&MName="+MName+"&LName="+LName+"&MobileNumber="+MobileNumber;
    var exT2 = "&Age="+Age+"&BloodGroup="+BloodGroup+"&Location="+Location+"&weight="+weight+"&height="+height;
      fetch(base_url + appendix+"&fname="+fname+exT1+exT2)
          .then((response) => {
              return response.json();
          }).then((res) => {
            console.log(res);
              if(res.status){
             alert("User information is successfully updated");
                 window.location.reload();
              }
              return res;
          }).catch((err) => {
            //   alert(err);
            console.error(err)
            window.location.reload();
          });
          document.getElementsByTagName("tr")[1].contentEditable =false;
    }

