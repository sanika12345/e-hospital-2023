    <script>
        function emailVerification(identifier) {
          const appendix = $(identifier).data('mail');

          const base_url = window.location.origin;


          fetch(base_url + appendix)
              .then((response) => {
                  return response.json();
              }).then((res) => {
                console.log(res);
                  if(res.status){
                    alert("Verification complete. Email with credentials sent to user");
                    window.location.reload();
                  }
                  return res;
              }).catch((err) => {
                  alert("Error in sending email to user. Please try again later.");
                  console.error(err)
              });
        }

