<%- include('../partials/header') -%>

  <div class="container">
    <div class="title">Early heart disease prediction </div>
    <p id="log" style="
    color:tomato; 
    font-weight: bold;
    font-size: larger;
    text-align: left;">
      Result
    </p>
    <div class="content">

      <form id="form">
        <div class="user-details">
          <div class="input-box">
            <span class="details">Model</span>
            <select name="ml_model" id="ml_model" required onchange="clearResult()">
              <option value="" disabled selected>Select your option</option>
              <option value="DecisionTree">DecisionTree</option>
              <option value="GBT">GBT</option>
              <option value="KNN">KNN</option>
              <option value="NaiveBayes">NaiveBayes</option>
              <option value="NN">NN</option>
              <option value="SVMLinear">SVMLinear</option>
              <option value="SVMRBF">SVMRBF</option>
            </select>
          </div>
          <div class="input-box">
            <span class="details">Age</span>
            <input type="text" id="age" name="age" placeholder="Enter your age" pattern="\d+" maxlength="3"
              oninput="clearResult()" title="Please enter numbers only" required>
          </div>
          <div class="input-box">
            <span class="details">Gender</span>
            <select name="gender" id="gender" required onchange="clearResult()">
              <option value="" disabled selected>Select</option>
              <option value=0>Male</option>
              <option value=1>female</option>
              <option value=2>Other</option>
            </select>
          </div>
          <div class="input-box">
            <span class="details">Chest Musle pain</span>
            <select name="CMP" id="CMP" required onchange="clearResult()">
              <option value="" disabled selected>Select</option>
              <option value=0>Atypical angina</option>
              <option value=1>Normal angina</option>
              <option value=2>Asymptotic</option>
              <option value=2>Non-anginal ache</option>

            </select>
          </div>
          <div class="input-box">
            <span class="details">Serum Cholestrol</span>
            <input type="text" name="Serum" id="Serum" placeholder="Enter your Serum Cholestrol" pattern="\d+"
              maxlength="3" oninput="clearResult()" title="Please enter numbers only" required>
          </div>
          <div class="input-box">
            <span class="details">Max pulse rate</span>
            <input type="text" name="MPR" id="MPR" placeholder="Enter Your heart rate (bpm)" pattern="\d+" maxlength="3"
              oninput="clearResult()" title="Please enter numbers only" required>
          </div>
          <div class="input-box">
            <span class="details">Excercise incuced angina</span>
            <select name="EIA" id="EIA" required onchange="clearResult()">
              <option value="" disabled selected>Select</option>
              <option value=0>Yes</option>
              <option value=1>No</option>
            </select>
          </div>
          <div class="input-box">
            <span class="details">Old Peak</span>
            <input type="text" name="OP" id="OP" placeholder="Enter the value" pattern="\d+" maxlength="3"
              oninput="clearResult()" title="Please enter numbers only" required>
          </div>
          <div class="input-box">
            <span class="details">Slope</span>
            <select name="Slope" id="Slope" required onchange="clearResult()">
              <option value="" disabled selected>Select</option>
              <option value=0>Up Slopping</option>
              <option value=1>Flat/no slope</option>
              <option value=2>Down slope</option>
            </select>
          </div>
          <div class="input-box">
            <span class="details">Fluroscopy</span>
            <select name="Fluroscopy" id="Fluroscopy" required onchange="clearResult()">
              <option value="" disabled selected>Select</option>
              <option value=0>0</option>
              <option value=1>1</option>
              <option value=2>2</option>
              <option value=3>3</option>
            </select>
          </div>
          <div class="input-box">
            <span class="details">Thalium</span>
            <select name="Thalium" id="Thalium" required onchange="clearResult()">
              <option value="" disabled selected>Select</option>
              <option value=0>Nominal</option>
              <option value=1>Fixed defect</option>
              <option value=2>Reversable defect</option>
            </select>
          </div>

        </div>
        <div class="spinner" style="display: none;"></div>

        <div class="black-button">
          <input type="submit" value="Predict">
        </div>
      </form>
    </div>
  </div>


  <script>
    document.getElementById("log").innerHTML = ``;
    const spinner = document.querySelector('.spinner');

    function logSubmit(event) {
      event.preventDefault();
      document.getElementById("log").innerHTML = ``;

      const data = {
        age: parseInt(document.getElementById("age").value),
        gender: parseInt(document.getElementById("gender").value),
        CMP: parseInt(document.getElementById("CMP")?.value),
        Serum: parseInt(document.getElementById("Serum").value),
        MPR: parseInt(document.getElementById("MPR").value),
        EIA: parseInt(document.getElementById("EIA").value),
        OP: parseInt(document.getElementById("OP").value),
        Slope: parseInt(document.getElementById("Slope").value),
        Fluroscopy: parseInt(document.getElementById("Fluroscopy").value),
        Thalium: parseInt(document.getElementById("Thalium").value),
      }
      let base_url = 'https://mlmodel.herokuapp.com/ml/';
      let ml_model = document.getElementById("ml_model").value;
      spinner.style.display = 'block'; // show the spinner

      const requestBody = {
        input: [
          data.age,
          data.gender,
          data.CMP,
          data.Serum,
          data.MPR,
          data.EIA,
          data.OP,
          data.Slope,
          data.Fluroscopy,
          data.Thalium,
        ]
      }

      fetch(base_url + ml_model, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(requestBody),

      })
        .then(response => response.json())
        .then(data => {
          if (data === 1) {
            document.getElementById("log").innerHTML = `You probably have heart disease risk`;
            spinner.style.display = 'none'; // hide the spinner


          } else if (data === 0) {
            document.getElementById("log").innerHTML = `You have a healthy heart`;
            spinner.style.display = 'none'; // hide the spinner
          }

        })
        .catch(error => {
          document.getElementById("log").innerHTML = `Please try again later`;
          spinner.style.display = 'none'; // hide the spinner

        });


    }
    function clearResult() {
      // To clear result
      document.getElementById("log").innerHTML = ``;
    }
    const form = document.getElementById('form');
    form.addEventListener('submit', logSubmit);
  </script>

